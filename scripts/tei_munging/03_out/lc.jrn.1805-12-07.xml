                        <cell role="data" rows="1" cols="1"/>
                     </row>
                     <row role="data">
                        <cell role="data" rows="1" cols="1">To a Creek and</cell>
                        <cell role="data" rows="1" cols="1">(N. 5 West in a bend)</cell>
                        <cell role="data" rows="1" cols="1"/>
                     </row>
                     <row role="data">
                        <cell role="data" rows="1" cols="1">To the mountain &amp; Point No. 2 in Same cove</cell>
                        <cell role="data" rows="1" cols="1">S. 49° E</cell>
                        <cell role="data" rows="1" cols="1"/>
                     </row>
                     <row role="data">
                        <cell role="data" rows="1" cols="1">To Point No. 3</cell>
                        <cell role="data" rows="1" cols="1">S. 35° W.</cell>
                        <cell role="data" rows="1" cols="1"/>
                     </row>
                     <row role="data">
                        <cell role="data" rows="1" cols="1">To <name type="place" key="Cape Disappointment">Cape Disapt.</name> is</cell>
                        <cell role="data" rows="1" cols="1">S. 87° W.</cell>
                        <cell role="data" rows="1" cols="1"/>
                     </row>
