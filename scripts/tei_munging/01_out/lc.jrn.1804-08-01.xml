                     </row>
                     <row role="data">
                        <cell role="data" rows="1" cols="1"> </cell>
                        <cell role="data" rows="1" cols="1">"</cell>
                        <cell role="data" rows="1" cols="1">7    55    47</cell>
                        <cell role="data" rows="1" cols="1"> </cell>
