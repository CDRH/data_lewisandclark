                        <cell role="data" rows="1" cols="1">N. 10° W.</cell>
                        <cell role="data" rows="1" cols="1">     ½</cell>
                        <cell role="data" rows="1" cols="1">me. on the S. pt. a Sand bar in R.</cell>
                     </row>
                     <row role="data">
                        <cell role="data" rows="1" cols="1">N. 18° E.</cell>
                        <cell role="data" rows="1" cols="1">  3</cell>
